<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/flash_light_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_baseline_flash_off_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#FFFFFFFF"
        android:contentDescription="@string/icon_to_change_flashlight_state" />

    <!--TextView
        android:id="@+id/flash_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="?attr/flashlight_off_text"
        android:textColor="?attr/color"
        app:layout_constraintEnd_toEndOf="@+id/flash_light_image"
        app:layout_constraintStart_toStartOf="@+id/flash_light_image"
        app:layout_constraintTop_toBottomOf="@+id/flash_light_image" /-->

    <ImageView
        android:id="@+id/target_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="center"
        android:src="@drawable/ic_target"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>